<?xml version="1.0" encoding="utf-8"?>
<extension version="3.6" type="plugin" group="crowdfundingpayment" method="upgrade">
    <name>PLG_CROWDFUNDINGPAYMENT_CONDITIONS</name>
    <author>Todor Iliev</author>
    <copyright>Copyright (C) 2017 Todor Iliev ( ITPrism.com ). All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-3.0.en.html GNU/GPLv3</license>
    <authorEmail>todor@itprism.com</authorEmail>
    <authorUrl>http://itprism.com</authorUrl>
    <version>1.0</version>
    <creationDate>23 January, 2017</creationDate>
    <description><![CDATA[
	<p>CrowdfundingPayment - Conditions is a plug-in that shows a list of terms and conditions on the payment wizard.</p>
	<p><a href="http://itprism.com/" target="_blank">Subscribe for the newsletter</a> to receive information about updates and new ITPrism extensions.</p>
	<p>Please, <a href="http://extensions.joomla.org/extensions/extension/e-commerce/donations/crowdfunding" target="_blank">vote for the extension</a> on Joomla! Extensions Directory</p>
	]]></description>
    
    <files>
        <filename plugin="conditions">conditions.php</filename>

		<folder>js</folder>
		<folder>language</folder>
		<folder>tmpl</folder>
    </files>
    
    <help url="PLG_CROWDFUNDINGPAYMENT_CONDITIONS_HELP_URL"/>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="project_conditions" type="radio" default="0" label="PLG_CROWDFUNDINGPAYMENT_CONDITIONS_PROJECT_CONDITIONS" description="PLG_CROWDFUNDINGPAYMENT_CONDITIONS_PROJECT_CONDITIONS_DESC" class="btn-group">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>

            <fieldset name="conditions" label="PLG_CROWDFUNDINGPAYMENT_CONDITIONS_CONDITIONS">
                <field name="conditions1" type="textarea" filter="safehtml" cols="50" rows="5"
                       label="PLG_CROWDFUNDINGPAYMENT_CONDITIONS_CONDITION_ONE"
                       description="PLG_CROWDFUNDINGPAYMENT_CONDITIONS_CONDITION_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <field name="conditions2" type="textarea" filter="safehtml" cols="50" rows="5"
                       label="PLG_CROWDFUNDINGPAYMENT_CONDITIONS_CONDITION_TWO"
                       description="PLG_CROWDFUNDINGPAYMENT_CONDITIONS_CONDITION_DESC"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <field name="conditions3" type="textarea" filter="safehtml" cols="50" rows="5"
                       label="PLG_CROWDFUNDINGPAYMENT_CONDITIONS_CONDITION_THREE"
                       description="PLG_CROWDFUNDINGPAYMENT_CONDITIONS_CONDITION_DESC"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <field name="conditions4" type="textarea" filter="safehtml" cols="50" rows="5"
                       label="PLG_CROWDFUNDINGPAYMENT_CONDITIONS_CONDITION_FOUR"
                       description="PLG_CROWDFUNDINGPAYMENT_CONDITIONS_CONDITION_DESC"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <field name="conditions5" type="textarea" filter="safehtml" cols="50" rows="5"
                       label="PLG_CROWDFUNDINGPAYMENT_CONDITIONS_CONDITION_FIVE"
                       description="PLG_CROWDFUNDINGPAYMENT_CONDITIONS_CONDITION_DESC"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>
        </fields>
    </config>

    <updateservers>
        <server type="extension" priority="1" name="CrowdfundingPayment - Conditions">http://cdn.itprism.com/updates/crowdfunding/plugins/plg_crowdfundingpayment_conditions.xml</server>
    </updateservers>
</extension>
